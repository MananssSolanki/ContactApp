<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Activities.AddContactActivity">

    <!-- Header / Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Create contact"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_favorite"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_toStartOf="@id/btn_save"
            android:button="@android:drawable/star_on"
            android:buttonTint="@color/black" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Save"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_32sdp">

            <!-- Account Selector -->
            <LinearLayout
                android:id="@+id/layout_account_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/iv_account_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="@android:color/black"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner_accounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:minHeight="@dimen/_30sdp" />

                    <!-- Fallback Textview if custom spinner logic is used -->
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@android:drawable/arrow_down_float"
                    app:tint="@android:color/black" />

            </LinearLayout>

            <!-- Photo Picker -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_24sdp">

                <ImageView
                    android:id="@+id/iv_contact_photo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/circle_background"
                    app:tint="#E0E0E0" />

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@android:color/darker_gray" />

            </FrameLayout>

            <!-- Name Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@android:color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        app:boxBackgroundMode="none"
                        app:hintTextColor="#757575">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="textPersonName|textCapWords"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#E0E0E0" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_expand_name"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@android:drawable/arrow_down_float"
                    app:tint="@android:color/black" />

            </LinearLayout>

            <!-- Hidden Name Fields (First, Last, etc) -->
            <LinearLayout
                android:id="@+id/layout_more_name_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_52sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:visibility="gone">

                <!-- First Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    app:boxBackgroundMode="none"
                    app:hintTextColor="#757575">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@android:color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- Last Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    app:boxBackgroundMode="none"
                    app:hintTextColor="#757575">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@android:color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- Phone Sections -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp">

                <LinearLayout
                    android:id="@+id/ll_phone_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/tv_add_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_52sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Add phone number"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:padding="@dimen/_8sdp"
                    app:drawableStartCompat="@android:drawable/ic_input_add"
                    app:drawableTint="#4CAF50"
                    android:drawablePadding="@dimen/_8sdp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Email Sections -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp">

                <LinearLayout
                    android:id="@+id/ll_email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/tv_add_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_52sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Add email"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:padding="@dimen/_8sdp"
                    app:drawableStartCompat="@android:drawable/ic_input_add"
                    app:drawableTint="#4CAF50"
                    android:drawablePadding="@dimen/_8sdp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- View More / Expandable Sections -->
            <TextView
                android:id="@+id/tv_view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                android:text="View more"
                android:textColor="#2196F3"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:id="@+id/layout_more_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Address Sections -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_address_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_add_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_52sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add address"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        app:drawableStartCompat="@android:drawable/ic_input_add"
                        app:drawableTint="#4CAF50"
                        android:drawablePadding="@dimen/_8sdp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

                <!-- Important Dates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/ll_date_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_add_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_52sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add important date"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        app:drawableStartCompat="@android:drawable/ic_input_add"
                        app:drawableTint="#4CAF50"
                        android:drawablePadding="@dimen/_8sdp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

                <!-- Work Info (Keep Static for now as usually single) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        app:tint="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Company"
                            app:boxBackgroundMode="none"
                            app:hintTextColor="#757575">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_company"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14ssp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E0E0E0" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Title"
                            app:boxBackgroundMode="none"
                            app:hintTextColor="#757575">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_job_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14ssp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E0E0E0" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Groups -->
                <LinearLayout
                    android:id="@+id/layout_groups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Groups"
                            android:textColor="#757575"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_group_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:text="Not assigned"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Website Sections -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/ll_website_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_add_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_52sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add website"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        app:drawableStartCompat="@android:drawable/ic_input_add"
                        app:drawableTint="#4CAF50"
                        android:drawablePadding="@dimen/_8sdp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

                <!-- Notes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Notes"
                            app:boxBackgroundMode="none"
                            app:hintTextColor="#757575">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14ssp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>

                 <!-- Messenger Sections -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/ll_messenger_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_add_messenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_52sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add messenger account"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        app:drawableStartCompat="@android:drawable/ic_input_add"
                        app:drawableTint="#4CAF50"
                        android:drawablePadding="@dimen/_8sdp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

                 <!-- Nickname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@android:color/black"
                        android:layout_marginTop="@dimen/_12sdp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_16sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nickname"
                            app:boxBackgroundMode="none"
                            app:hintTextColor="#757575">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:background="@null"
                                android:inputType="textPersonName|textCapWords"
                                android:textSize="@dimen/_14ssp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                         <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#E0E0E0"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- Relationship Sections -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_16sdp">

                    <LinearLayout
                        android:id="@+id/ll_relation_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tv_add_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_52sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Add relationship"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:padding="@dimen/_8sdp"
                        app:drawableStartCompat="@android:drawable/ic_input_add"
                        app:drawableTint="#4CAF50"
                        android:drawablePadding="@dimen/_8sdp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
