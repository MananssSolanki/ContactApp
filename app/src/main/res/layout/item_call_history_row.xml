<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/root_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:gravity="center_vertical">

        <!-- Call Type Icon -->
        <ImageView
            android:id="@+id/iv_call_type"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@android:drawable/sym_call_incoming"
            tools:tint="@color/teal_200"/>

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp">

            <!-- Style 0: Time -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:53 pm"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <!-- Style 1: Contact Name -->
            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"/>

            <!-- Style 1: Phone Number -->
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 234 567 8900"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"/>

            <!-- Style 0: Status & Duration -->
            <TextView
                android:id="@+id/tv_status_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoming call, 0 mins 8 secs"
                android:textSize="@dimen/_12ssp"
                android:textColor="#757575"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"/>

            <!-- Style 1: Time & Duration -->
            <TextView
                android:id="@+id/tv_time_and_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 AM â€¢ 2:45"
                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Style 1: Call Button -->
        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@android:drawable/ic_menu_call"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_6sdp"
            android:contentDescription="Call"
            tools:tint="@color/teal_700"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#E0E0E0"
        android:layout_marginStart="@dimen/_56sdp"/>

</LinearLayout>
