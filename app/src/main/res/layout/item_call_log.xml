<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Call Type Icon -->
    <ImageView
        android:id="@+id/ivCallType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/sym_call_incoming"
        android:contentDescription="Call Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:tint="@color/teal_700"/>

    <!-- Contact Name or Phone Number -->
    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Contact Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivCallType"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Phone Number (if contact name exists) -->
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:text="+1 234 567 8900"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/ivCallType"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintTop_toBottomOf="@id/tvContactName"/>

    <!-- Time and Duration -->
    <TextView
        android:id="@+id/tvTimeAndDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:text="10:30 AM â€¢ 2:45"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/ivCallType"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_call"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Call"
        android:tint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
